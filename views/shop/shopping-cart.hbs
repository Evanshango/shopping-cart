{{#if products}}
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6 my-4">
            <ul class="list-group">
                {{#each products}}
                    <li class="list-group-item">
                        <span class="badge badge-danger pull-right">{{this.qty}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class="badge badge-success">${{this.price}}</span>
                        <div class="btn-group">
                            <button class="dropdown-toggle btn btn-primary btn-sm" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <a href="#" class="dropdown-item">Reduce by 1</a>
                                <a href="#" class="dropdown-item">Remove All</a>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6">
            <strong>Total: {{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6">
            <button type="button" class="btn btn-sm btn-success">Checkout</button>
        </div>
    </div>
{{else}}
    <div class="row justify-content-center my-5">
        <div class="col-sm-6 col-md-6">
            <h4>No Items in Cart</h4>
        </div>
    </div>
{{/if}}
